{
  "semi": true,
  "tabWidth": 2,
  "printWidth": 100,
  "singleQuote": true,
  "trailingComma": "all",
  "jsxSingleQuote": false,
  "bracketSpacing": true,
  "importOrder": [
    "^(react$|next/)",
    "^@mui",
    "<THIRD_PARTY_MODULES>",
    "^components",
    "^db",
    "^middlewares",
    "^client",
    "^shared",
    "^styles",
    "^[../](.*)(?<!.css)$",
    "^[./](.*)(?<!.scss)$",
    "(.*)scss$",
    "^public"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderCaseInsensitive": true
}
